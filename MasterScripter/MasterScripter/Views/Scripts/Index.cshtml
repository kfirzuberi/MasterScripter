@model IEnumerable<MasterScripter.DAL.Models.Script>
@{
    ViewBag.Title = "Scripts";
}
@functions{

    public List<Tuple<string, string>> FilterScript(string name, string desc) {
        return Model.Where(s => s.Name.ToLower().Contains(name.ToLower()) && s.Description.ToLower().Contains(desc.ToLower()))
            .ToList().ConvertAll(s => new Tuple<string,string>(s.Id.ToString(),s.Version.ToString()));
    }
}
<div class="container">
    <div class="row">

        <input name="q" id="search-name" class="form-control" type="text" placeholder="search by name">
    </div>
    <div class="row">
        <input name="loc" id="search-desc" class="form-control" type="text" placeholder="search by description">
    </div>
    <div class="row">
        <input type="button" class="btn btn-success" value="Search" id="searchScriptBtn" />
</div>
    </div>

    <button type="button" allow-view="2" onclick="location.href='@Url.Action("Create", "Scripts")'" class="btn btn-primary bmd-btn-fab bootom-right-fab"
            data-toggle="tooltip" data-placement="top" title="Add new Script">
        <i class="material-icons">add</i>
    </button>

    <div class="row">
        <div class="col-md-4">
            <ul id="scriptlist" class="list-group">
                @foreach (var item in Model)
                {
                    <li sid="@item.Id" sver="@item.Version" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">

                        <span class="name">
                            @Html.DisplayFor(modelItem => item.Name)
                        </span>
                        @Html.HiddenFor(modelItem => item.Description)
                        <span class="badge badge-primary badge-pill">
                            @Html.DisplayFor(modelItem => item.Version)
                        </span>

                    </li>
                }
            </ul>
        </div>
        <div class="col-md-8">
            <div id="scriptDetail">

            </div>
        </div>


        <script type="text/javascript">
        var url = '@Url.Action("GetScriptDetail", "Scripts")';

            $("#searchScriptBtn").click(function (event) {
            // Get valuse to from th inputs
            var searchName = $('#search-name').val().toLowerCase();
            var searchdesc = $('#search-desc').val().toLowerCase();

            // for eacb script element
            $('#scriptlist li').toArray().forEach(item => {

                // extrct name & desc from the specsific element
                var name = $('span.name', item).text().trim().toLowerCase();
                var desc = $('input', item).val().trim().toLowerCase();

                // check if match
                if (name.indexOf(searchName) > -1 && desc.indexOf(searchdesc) > -1) {
                    $(item).attr('style', 'display:flex !important'); // show
                } else {
                    $(item).attr('style', 'display:none !important'); // hide
                }
            })
        })

        $('#scriptlist .list-group-item').click(function (event) {
            $('#scriptlist .list-group-item').removeClass('active');
            $(this).addClass('active');
            $('#scriptDetail').load(url, { id: $(this).attr("sid"), version: $(this).attr("sver") });
        });

        $('#scriptlist .list-group-item').first().click();
        </script>
    </div>


