@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-right form-inline", style = "margin-bottom:0px"}))
    {
        @Html.AntiForgeryToken()

        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Index", "Manage", routeValues: null)" title="Manage">
                Hello @User.Identity.GetUserName() !
            </a>
        </li>


        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log off</a>
        </li>
    }
}
else
{

    <li class="nav-item">
        <a class="nav-link" id="registerLink" href="@Url.Action("Register", "Account", routeValues: null)">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="loginLink" href="@Url.Action("Login", "Account", routeValues: null)">Log in</a>
    </li>
}
