    <!--/.Panel 1-->
    <!--Panel 2 Companies-->
    <div class="tab-pane fade" id="panelCompanies" role="tabpanel">
        <br>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.Companies.First().Code)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Companies.First().Name)</th>
                <th scope="col">@Html.DisplayNameFor(model => model.Companies.First().Logo)</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Companies)
            {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Code)</th>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Logo)</td>
                </tr>
            }
     
            </tbody>
        </table>
    </div>
