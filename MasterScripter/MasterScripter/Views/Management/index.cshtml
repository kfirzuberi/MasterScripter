@model MasterScripter.Models.ManagementViewModel
@{
    ViewBag.Title = "index";
}

<h2>index</h2>

<!-- Nav tabs -->
<ul class="nav nav-tabs md-tabs nav-justified">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#panelUsers" role="tab"><i class="material-icons">supervisor_account</i>Users</a>
    </li>
